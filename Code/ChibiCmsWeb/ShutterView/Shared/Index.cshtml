@using Jushen.ChibiCms.ChibiContent
@model List<ContentMeta>

@{
    ViewData["Title"] = "Detail";
    Layout = "_Layout.cshtml";
}


@for (int i = 0; i < Model.Count; i++)
{
    <div class="col-6 col-md-6 col-lg-4" data-aos="fade-up">
        <a href="single.html" class="d-block photo-item">
            <img src="@(string.IsNullOrEmpty(Model[i].Cover)?" ShutterView/images/DefaultCover.jpg":Model[i].Cover)" alt="Cover" class="img-fluid">
            <div class="photo-text-more">
                <div class="photo-text-more">
                    <h3 class="heading">@Model[i].Title</h3>
                    <span class="meta">@Model[i].ChangeTime.ToString("yyy/MM/dd")</span>
                </div>
            </div>
        </a>
    </div>

}




